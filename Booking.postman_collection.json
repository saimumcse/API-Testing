					"script": {
						"exec": [
							"var jsonData = pm.response.json()\r",
							"pm.environment.set(\"bookingID\", jsonData.bookingid)\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"First Name Validation\", function () {\r",
							"    pm.expect(jsonData.booking.firstname).to.eql(\"Saimum\");\r",
							"});\r",
							"\r",
							"pm.test(\"Last Name Validation\", function () {\r",
							"    pm.expect(jsonData.booking.lastname).to.eql(\"Islam\");\r",
							"});\r",
							"\r",
							"pm.test(\"Total Price Validation\", function () {\r",
							"    pm.expect(jsonData.booking.totalprice).to.eql(150);\r",
							"});\r",
							"\r",
							"pm.test(\"Deposit Paid Validation\", function () {\r",
							"    pm.expect(jsonData.booking.depositpaid).to.eql(true);\r",
							"});\r",
							"\r",
							"pm.test(\"Checkin Validation\", function () {\r",
							"    pm.expect(jsonData.booking.bookingdates.checkin).to.eql(\"2021-01-01\");\r",
							"});\r",
							"\r",
							"pm.test(\"Checkout Validation\", function () {\r",
							"    pm.expect(jsonData.booking.bookingdates.checkout).to.eql(\"2022-01-01\");\r",
							"});\r",
							"\r",
							"pm.test(\"Additional Needs Validation\", function () {\r",
							"    pm.expect(jsonData.booking.additionalneeds).to.eql(\"Breakfast\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
